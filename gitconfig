[user]
  name = Sven Welte
  email = git@svenwelte.de
	signingkey = 1ECF8F30C2473E45

[color]
  ui=auto

[alias]
  co = checkout
  st = status
  ci = commit -S -a
  lg = log -p
  dh = diff HEAD
  pr = pull --rebase
  uncommit = reset --soft HEAD^

[core]
  excludesfile = ~/.gitignore
  precomposeunicode = true

[push]
  default = current

[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  cmd = vim -d "$LOCAL" "$MERGED" "$REMOTE"
  trustExitCode = true
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[commit]
	gpgsign = true
